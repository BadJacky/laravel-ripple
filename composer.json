{
  "name": "cloudtay/laravel-ripple",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "cclilshy",
      "email": "jingnigg@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Laravel\\Ripple\\": "src/"
    }
  },
  "require": {
    "php": ">=8.1",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "ext-sockets": "*",
    "ext-pdo": "*",
    "cloudtay/ripple": "^1.0",
    "cloudtay/ripple-http": "^1.0",
    "laravel/framework": "^11.0|^12.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "*",
    "illuminate/http": "*",
    "illuminate/console": "*",
    "illuminate/container": "*",
    "illuminate/support": "*",
    "phpunit/phpunit": "*",
    "laravel/octane": "2.x-dev"
  },
  "suggest": {
    "cloudtay/ripple-websocket": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "laravel": {
      "providers": [
        "\\Laravel\\Ripple\\Provider"
      ]
    }
  }
}
